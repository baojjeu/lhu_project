<br><br>

<div class="container" >
  <%= form_for(@space, html: { mutilpart: true, class: 'form-horizontal' }) do |f| %>
    <div class="col-md-8">
      <div class="form-group">
        <%= f.label :name, '名稱', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: 'form-control', autofocus: true, placeholder: '請輸入單位的名稱' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :address, '地址', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :address, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :intro, '描述', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_area :intro, class: 'form-control', rows: 6, placeholder: '請簡介您的單位' %>
        </div>
      </div>
      <hr>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit '下一步', class: 'btn btn-primary col-sm-2' %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <% if @space.space_view? %>
        <%= image_tag @space.space_view_url.to_s %>
      <% else %>
        <%= image_tag 'block-default.png', style: 'width: 250px; height: 250px;' %>
      <% end %>
      <%= f.file_field :space_view %>
    </div>


  <% end %>
</div>