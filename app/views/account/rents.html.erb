<div class="container">
  <br>
  <%= render 'layouts/breadcrumb_for_user' %>
  <br>
  <div class="row">
   <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">已租用的場地（審核中）</div>
        <table class="table">
          <thead>
            <% if current_user.registrations.where(is_pass: false).length < 1 %>
              <h2 align="center">您目前沒有審核中的場地。</h2>
            <% else %>
              <tr>
                <th>單位名稱</th>
                <th>場地名稱</th>
                <th>申請日期</th>
                <th>負責人</th>
                <th>操作</th>
              </tr>
            <% end %>

          </thead>

          <tbody>
            <% current_user.registrations.each do |record| %>
              <% unless record.is_pass %>
                <tr>
                  <td><%= link_to record.space.name, preview_space_path(record.space) %></td>
                  <td><%= record.block.name %></td>
                  <td>123</td>
                  <td><%= link_to record.space.user.name, record.space.user %></td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <br>
</div>