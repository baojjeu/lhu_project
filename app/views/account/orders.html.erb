<div class="container">
  <br>
  <%= render 'layouts/breadcrumb_for_user' %>
  <br>
  <div class="row">
   <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">未完成的訂單</div>
        <table class="table">
          <thead>
            <% if current_user.orders.where(is_activated: false).length < 1 %>
              <h2 align="center">您目前沒有完成交易的訂單。</h2>
            <% else %>
              <tr>
                <th>單位名稱</th>
                <th>場地名稱</th>
                <th>申請日期</th>
                <th>申請人</th>
                <th>操作</th>
              </tr>
            <% end %>

          </thead>

          <tbody>
            <% current_user.orders.each do |record| %>
              <% unless record.is_activated %>
                <tr>
                  <td><%= link_to record.space.name, preview_space_path(record.space) %></td>
                  <td><%= record.block.name %></td>
                  <td><%= record.created_at.strftime("%Y/%m/%d %H:%M") %></td>
                  <td><%= link_to record.registration.user.name, record.registration.user %></td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <br>
</div>