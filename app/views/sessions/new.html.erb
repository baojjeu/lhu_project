<div class="container">
  <h1 align="center">用戶登入</h1>
  <hr>
  <%= form_for(:session, url: sessions_path) do |f| %>


    <div class="signin-card">
      <div class="form-group">
        <%= f.text_field :email, placeholder: 'E-mail', class: 'form-control', autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, placeholder: '密碼', class: 'form-control' %>
      </div>
      <br><br>
      <%= f.submit '登入', class: 'btn btn-block btn-primary' %>
    </div>

  <% end %>

</div>