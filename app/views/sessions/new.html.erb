
<div class="login-wrapper">
  <div class="container">
    <%= form_for(:session, url: sessions_path) do |f| %>
      <div class="signin-card">
        <div class="form-group">
          <%= f.email_field :email, placeholder: 'E-mail', class: 'form-control', autofocus: true %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, placeholder: '密碼', class: 'form-control' %>
        </div>
        <br><br>
        <%= f.submit '登入', class: 'btn btn-block btn-success' %>
      </div>
    <% end %>
  </div>
</div>